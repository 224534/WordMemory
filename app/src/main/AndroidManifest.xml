<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WordMemory"
        tools:targetApi="31">
        <activity
            android:name=".ui.person.ImportActivity"
            android:exported="false" />

        <receiver
            android:name=".ui.person.WordReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="recreate_word" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".ui.person.BookReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="recreate_book" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".ui.person.NewWordActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity
            android:name=".ui.person.NewBookActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity
            android:name=".ui.person.WordDialogActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity
            android:name=".ui.person.BookDialogActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity
            android:name=".ui.person.WordActivity"
            android:exported="false" />
        <activity
            android:name=".ui.person.BookActivity"
            android:exported="false" />
        <activity
            android:name=".ui.home.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>